{% if pagination %}
    <div class="pagination">
        {% if pagination.prev %}
            <a href="{{ pagination.prev.link }}"
               class="pagination-prev-link {{ pagination.prev.link|length ? '' : 'invisible' }}">Prev</a>
        {% else %}
            <span class="pagination-prev-span">Prev</span>
        {% endif %}
        <ul class="pagination-pages">
            {% for page in pagination.pages %}
                <li>
                    {% if page.link %}
                        <a href="{{ page.link }}" class="{{ page.class }}">{{ page.title }}</a>
                    {% else %}
                        <span class="{{ page.class }}">{{ page.title }}</span>
                    {% endif %}
                </li>
            {% endfor %}
        </ul>
        {% if pagination.next %}
            <a href="{{ pagination.next.link }}"
               class="pagination-next-link {{ pagination.next.link|length ? '' : 'invisible' }}">Next</a>
        {% else %}
            <span class="pagination-next-span">Next</span>
        {% endif %}
    </div>
{% endif %}