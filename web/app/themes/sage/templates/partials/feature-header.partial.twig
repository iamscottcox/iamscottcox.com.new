<div class="feature-header">
    <div class="feature-header-titles">
        <h1>
            {% if post.title %}
            {{ post.title }}
            {% else %}
            {{ site.name }}
            {% endif %}
        </h1>
        <h2>
            {% if post.get_field('subtitle') %}
            {{ post.get_field('subtitle') }}
            {% else %}
            {{ site.description }}
            {% endif %}
        </h2>
    </div>
    <div class="feature-header-chevron-down">
        <a href="#content" class="chevron-down"><i class="fa fa-chevron-down"></i></a>
    </div>
</div>

